{
  "private": true,
  "scripts": {
    "docker:api": "docker build -t cerberus_api:latest -t ghcr.io/locktech/cerberus_api:v0.1.0 -f ./Dockerfile.api .",
    "docker:web": "docker build -t cerberus_web:latest -t ghcr.io/locktech/cerberus_web:v0.1.0 -f ./Dockerfile.web .",
    "docker:all": "cross-env yarn docker:api && yarn docker:web"
  },
  "workspaces": {
    "packages": [
      "api",
      "web",
      "packages/*"
    ]
  },
  "devDependencies": {
    "@redwoodjs/core": "^0.37.0-rc.72"
  },
  "eslintConfig": {
    "extends": "@redwoodjs/eslint-config",
    "ignorePatterns": [
      "web/src/index.html"
    ],
    "root": true
  },
  "engines": {
    "node": "14.x",
    "yarn": "1.x"
  }
}